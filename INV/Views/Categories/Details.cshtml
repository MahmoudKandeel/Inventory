@model INV.Models.Category

@{
    ViewBag.Title = "Details";
}

<div class="box box-warning">
    <div class="box-header with-border">
        <h3 class="box-title">Category Details</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <div class="form-group">
            <label>Category Name</label>
            <input type="text" class="form-control" placeholder="@Model.Name" disabled="">
        </div>
        <div class="form-group">
            <label>Category Description</label>
            <input type="text" class="form-control" placeholder="@Model.Description" disabled="">
        </div>
        <div class="form-group">
            <label>@Html.DisplayNameFor(model => model.Notes)</label>
            <input type="text" class="form-control" placeholder="@Model.Notes" disabled="">
        </div>
        <p>
            @Html.ActionLink("Edit", "Edit", new {id = Model.cat_id}) |
            @Html.ActionLink("Back to List", "Index")
        </p>
    </div>
</div>