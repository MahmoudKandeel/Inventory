<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/Content/bootstrap/js/bootstrap.min.js"></script>

<div class="container" style="width: 40%; margin-top: 2%">
    <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Add Product</a>
    <div class="modal fade" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">Add Product</h3>
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                </div>
                <div class="modal-body">
                    <form id="myForm">
                        <div class="form-group">
                            @Html.DropDownList("Products", null, htmlAttributes: new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.TextBox("Quantity", null, htmlAttributes: new { @class = "form-control", placeholder = "Quantity" })
                        </div>
                        <div class="form-group">
                            @Html.TextBox("Discount", null, htmlAttributes: new { @class = "form-control", placeholder = "Discount" })
                        </div>
                        <div class="form-group">
                            @Html.TextBox("Price", null, htmlAttributes: new { @class = "form-control", placeholder = "Price" })
                        </div>
                    </form>
                    <div id="loaderDiv" style="text-align: center; display: none">
                        <img src="#" alt="loading image" />
                    </div>
                </div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>
                    <a href="#" class="btn btn-success" id="#btnSubmit">Submit</a>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts
{
    <script>
        $(document).ready(function () {
            $("#btnSubmit").click(function () {
                var myformdata = $("#myForm").serialize();
                $.ajax({
                    type: "POST",
                    url: "/OrderDetails/Create",
                    data: myformdata,
                    success: function () {
                        $("#loaderDiv").hide();
                        $("#myModal").modal("hide");
                    }
                });
            });
        });
    </script>
}