@model INV.Models.Employee

@{
    ViewBag.Title = "Details";
}
<div class="box box-warning">
    <div class="box-header with-border">
        <h3 class="box-title">Customer Details</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <div class="form-group">
            <div class="form-group">
                @*<label>Customer Photo</label>*@
                <div class="text-center">
                    <img src="@Model.Photo" width="300px" height="150px" class="img-circle img-thumbnail "/>
                </div>
            </div>
            <div class="form-group">
                <label>Employee Title</label>
                <input type="text" class="form-control" placeholder="@Model.Title" disabled="">
            </div>
            <label>Employee Name</label>
            <input type="text" class="form-control" placeholder="@Model.Name" disabled="">
        </div>
        <div class="form-group">
            <label>Employee Phone</label>
            <input type="text" class="form-control" placeholder="@Model.Phone" disabled="">
        </div>
        <div class="form-group">
            <label>Employee Address</label>
            <input type="text" class="form-control" placeholder="@Model.Address" disabled="">
        </div>
        <div class="form-group">
            <label>Employee Salary</label>
            <input type="text" class="form-control" placeholder="@Model.Salary" disabled="">
        </div>

        <div class="form-group">
            <label>Employee Email</label>
            <input type="text" class="form-control" placeholder="@Model.Email" disabled="">
        </div>
        <div class="form-group">
            <label>Employee HireDate</label>
            <input type="text" class="form-control" placeholder="@Model.HireDate" disabled="">
        </div>
        <div class="form-group">
            <label>Employee Notes</label>
            <input type="text" class="form-control" placeholder="@Model.Notes" disabled="">
        </div>
        <p>
            @Html.ActionLink("Edit", "Edit", new {id = Model.emp_id}) |
            @Html.ActionLink("Back to List", "Index")
        </p>
    </div>
</div>