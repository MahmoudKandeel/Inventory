@model INV.Models.Product

@{
    ViewBag.Title = "Details";
}
<div class="box box-warning">
    <div class="box-header with-border">
        <h3 class="box-title">Customer Details</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <div class="form-group">
            @*<label>Customer Photo</label>*@
            <div class="text-center">
                <img src="@Model.Photo" width="300px" height="150px" class="img-circle img-thumbnail " />
            </div>
        </div>
        <div class="form-group">
            <label>Product Name</label>
            <input type="text" class="form-control" placeholder="@Model.Name" disabled="">
        </div>
        <div class="form-group">
            <label>Brand Name</label>
            <input type="text" class="form-control" placeholder="@Model.Brand.Name" disabled="">
        </div>
        <div class="form-group">
            <label>Product Entry Date</label>
            <input type="text" class="form-control" placeholder="@Model.EntryDate" disabled="">
        </div>
        <div class="form-group">
            <label>Product Expire Date</label>
            <input type="text" class="form-control" placeholder="@Model.ExpireDate" disabled="">
        </div>

        <div class="form-group">
            <label>Product Notes</label>
            <input type="text" class="form-control" placeholder="@Model.Notes" disabled="">
        </div>
        <div class="form-group">
            <label>Product unite Price</label>
            <input type="text" class="form-control" placeholder="@Model.unitePrice" disabled="">
        </div>
        <div class="form-group">
            <label>Product Units InStock</label>
            <input type="text" class="form-control" placeholder="@Model.UnitsInStock" disabled="">
        </div>
        <p>
            @Html.ActionLink("Edit", "Edit", new { id = Model.pro_id }) |
            @Html.ActionLink("Back to List", "Index")
        </p>
    </div>
</div>