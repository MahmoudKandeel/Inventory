@{
    ViewBag.Title = "UserRole";
}

@using (@Html.BeginForm("AssignUserToRole", "Account"))
{
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">User Roles</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
            <div class="box-body">
                <div class="form-group">
                    <label>UserName</label>
                    @Html.DropDownList("UserName", ViewBag.Users as SelectList, htmlAttributes: new {@class = "form-control"})
                </div>
                <div class="form-group">
                    <label>Role Name</label>
                    @Html.DropDownList("Name", ViewBag.Roles as SelectList, htmlAttributes: new {@class = "form-control"})
                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <button type="submit" class="btn btn-success">Assign Role</button>
            </div>
    </div>
}