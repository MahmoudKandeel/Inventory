@model INV.Models.Customer

@{
    ViewBag.Title = "Details";
}
<div class="box box-warning">
    <div class="box-header with-border">
        <h3 class="box-title">Customer Details</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <div class="form-group">
            <div class="form-group">
                @*<label>Customer Photo</label>*@
                <div class="text-center">
                    <img src="@Model.Photo" width="300px" height="150px" class="img-circle img-thumbnail " />
                </div>
            </div>
            <label>Customer Name</label>
            <input type="text" class="form-control" placeholder="@Model.Name" disabled="">
        </div>
        <div class="form-group">
            <label>Customer Phone</label>
            <input type="text" class="form-control" placeholder="@Model.Phone" disabled="">
        </div>
        <div class="form-group">
            <label>Customer Address</label>
            <input type="text" class="form-control" placeholder="@Model.Address" disabled="">
        </div>
        <div class="form-group">
            <label>Customer Zipcode</label>
            <input type="text" class="form-control" placeholder="@Model.Zipcode" disabled="">
        </div>

        <div class="form-group">
            <label>Customer Email</label>
            <input type="text" class="form-control" placeholder="@Model.Email" disabled="">
        </div>
        <div class="form-group">
            <label>Customer Balance</label>
            <input type="text" class="form-control" placeholder="@Model.Balance" disabled="">
        </div>
        <div class="form-group">
            <label>Customer Notes</label>
            <input type="text" class="form-control" placeholder="@Model.Notes" disabled="">
        </div>
        <p>
            @Html.ActionLink("Edit", "Edit", new {id = Model.cust_id}) |
            @Html.ActionLink("Back to List", "Index")
        </p>
    </div>
</div>